@model Project3.Models.News

@{
    ViewData["Title"] = "News Details Page";
}

<div>
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">News Details</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="NewsAdmin" asp-action="Index">News management</a></li>
                <li class="breadcrumb-item active">News Details</li>
            </ol>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LongContent)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.LongContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/@Model.NewsImage" width="20%" height="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.NewsId">Edit</a>
</div>
