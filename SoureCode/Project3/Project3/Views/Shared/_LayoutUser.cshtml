    <script src="~/StyleUser/js/jquery.magnific-popup.min.js"></script>
    <script src="~/StyleUser/js/aos.js"></script>
    <script src="~/StyleUser/js/jquery.animateNumber.min.js"></script>
    <script src="~/StyleUser/js/bootstrap-datepicker.js"></script>
    <script src="~/StyleUser/js/scrollax.min.js"></script>
