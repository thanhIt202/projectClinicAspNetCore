                    <li class="nav-item">
                        <a asp-controller="Product" asp-route-id="All" asp-action="Index" class="nav-link">
                            Shop
                        </a>

                    </li>

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="About" class="nav-link">
                            About
                        </a>

                    </li>
                    <li class="nav-item">
                        <a asp-controller="Blog" asp-action="Index" class="nav-link">
                            Blog
                        </a>
                    </li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>


                    <li class="nav-item"><a asp-controller="Cart" asp-action="Index" class="nav-link"><span class="icon-shopping_cart"></span></a></li>


                    @if (@HttpContextAccessor.HttpContext.Session.GetString("LoginName") == null)

                    {
                        <li class="nav-item"><a asp-controller="Login" asp-action="Index" class="nav-link"><i class="fa-solid fa-user"></i></a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Login" asp-action="Account" asp-route-id="@HttpContextAccessor.HttpContext.Session.GetInt32("LoginId")" class="nav-link">@HttpContextAccessor.HttpContext.Session.GetString("LoginName")</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->
    <!-- footer -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="ftco-footer ftco-section">
        <div class="container">
            <div class="row">
                <div class="mouse">
                    <a asp-controller="Home" asp-action="About" class="mouse-icon">
