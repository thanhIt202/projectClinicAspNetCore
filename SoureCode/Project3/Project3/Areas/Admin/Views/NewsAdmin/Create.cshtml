@model Project3.Models.News

@{
    ViewData["Title"] = "News Create Page";
}

<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">News Create</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="NewsAdmin" asp-action="Index">News management</a></li>
            <li class="breadcrumb-item active">News Create</li>
        </ol>
    </div>
</div>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <span class="text-danger">@ViewBag.error</span>
    </div>
    <div class="form-group">
        <label asp-for="ShortContent" class="control-label"></label>
        <textarea asp-for="ShortContent" class="form-control" rows="3"></textarea>
        <span asp-validation-for="ShortContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LongContent" class="control-label"></label>
        <textarea asp-for="LongContent" id="txtLongContent" class="form-control"></textarea>
        <span asp-validation-for="LongContent" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="NewsDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
    <div class="form-group">
        <label asp-for="NewsImage" class="control-label"></label>
        <input asp-for="NewsImage" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewsType" class="control-label"></label>
        <select asp-for="NewsType" class="form-control">
            <option value="Medical">Medical</option>
            <option value="Science">Science</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js"></script>
    <a href="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map">~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map</a>
    <script>

        ClassicEditor
            .create(document.querySelector('#txtLongContent'), {

            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });

    </script>
}
