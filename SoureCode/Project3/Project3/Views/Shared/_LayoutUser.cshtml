    <link rel="stylesheet" href="~/StyleUser/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/StyleUser/css/animate.css">

    <link rel="stylesheet" href="~/StyleUser/css/owl.carousel.min.css">
